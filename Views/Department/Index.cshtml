
@{
    ViewData["Title"] = "Department List";
}

@model IEnumerable<Department>
<h1 class="bg-danger text-black">Department List</h1>
<a asp-action="Create" class="btn btn-outline-warning
">Create Department</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (Department dept in Model){
        <tr>
            <td>@dept.Id</td>
            <td>@dept.Name</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@dept.Id">Update</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@dept.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
